<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create a new CampGround:</h1>
        
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="name" name="campground[name]" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="image url" name="campground[image]" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="description" name="campground[description]" required>
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit">
                </div>
            </form>
            <a href="/campgrounds">Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>

